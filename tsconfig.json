    "module": "CommonJS",
    "strict": true,
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": ".out"
  },
  "exclude": [
    "node_modules"
